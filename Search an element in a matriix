#include<iostream>
using namespace std;
//Matrix	Search an element in a matriix
void Search(int matrix[4][4]){
    int element;
    cout<<"\n enter the element to search";
    cin>>element;
    for(int i=0;i<4;i++){
        for(int j=0;j<4;j++){
            if(matrix[i][j]==element){
                cout<<"\n element found at"<<"("<<i<<","<<j<<")";
            }
            
        }
    }
}
int main(){
    int matrix[4][4]={ { 10, 20, 30, 40 },
                      { 15, 25, 35, 45 },
                      { 27, 29, 37, 48 },
                      { 32, 33, 39, 50 } };
            Search(matrix);
            return 0;
    
}
